<%= javascript_include_tag 'topical_map_integration/category_selector' %>
<%= hidden_field_tag 'current_category_id', @category.nil? ? nil : @category.id %>
<%= hidden_field_tag 'current_category_title', @category.nil? ? nil : @category.title %>
<%= hidden_field_tag 'current_category_url', @category.nil? ? category_children_path(@main_category) : category_children_path(@main_category, :selected_category_id => @category.id) %>
<% if @main_category.nil? %>
     <h1>Select a category</h1>
<% else %>
     <h1>Select a <%=h @main_category.title %></h1>
<% end %>
<p>
<%= submit_tag 'Select', :id => 'select_button' %>
<%= submit_tag 'Cancel', :id => 'cancel_button' %>
</p>
<div id="navigation">
<%= render :partial => 'index', :locals => { :categories => categories, :margin_depth => 0 } %>
</div>